<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head')%>

    <body>

        <main class="login">
            <div class="login-box">
                <a href="/"><img class="avatar" src="/img/logo/logo_small_icon_only.jpg" alt=""></a>

                <h1 class="h1Bienvenido">BIENVENIDO</h1>
                <form action="/views/user/login" method="POST" class="form-login" id="form">
                    <p class="errorFront" id="errorEmail"></p>
                    <input class="usu" type="text" name="email" placeholder="Email" id="mail">
                    <%if(locals.errors && errors.email) { %>
                        <p class="errorEpress">
                            <%= errors.email.msg %>
                        </p>
                        <% } %>
                            <!-- <label for="">Contrase単a</label> -->
                            <p class="errorFront" id="errorPass"></p>
                            <p class="errorFront" id="errorPassMayuscula"></p>
                            <input class="pas" type="password" name="password" placeholder="Contrase単a" id="password">
                            <%if(locals.errors && errors.pass) { %>
                                <p class="errorEpress">
                                    <%= errors.pass.msg %>
                                </p> <br><br><br>
                                <% } %>
                                <div class="recordar">
                                    <label class="reco" for="recordar">Recordar Usuario</label><br>
                                    <input type="checkbox" name="remember" class="checkbox"> <br><br>
                                </div><br><br>
                                    <button type="submit" class="button-login" name="button"><i class="fa fa-sign-in"
                                    aria-hidden="true"></i>
                                    <span>INGRESAR</span></button>
                                    <!-- <p class="warnings-login" id="warnings-login"></p> -->

                                    <!-- <a class="href" href="#">多Olvidaste tu contrase単a?</a> -->
                                    <a class="href" href="/views/user/formularioRegistro">Registrate</a>
            </div>
            </form>
            </div>
            <script src="/js/login.js" type="text/javascript"></script>
        </main>
    </body>

</html>