<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
    <header>
        <script src="/js/registro.js" type="text/javascript"></script>
    </header>
<body class="register-body">
   
    <a href="/"><img src="/img/logo/logo_small_icon_only.jpg " class= avatar-register width="50%"></a>
       <h3 class="cell"> CELL NOW</H3>
    <main class = "register">
        <h3 class="cell">Registrate!</h3>

      

        <form action= "/user/formularioRegistro" method="POST" enctype="multipart/form-data"  >
            <div class= "registerTotal">
                <!-- <label for="first_name" class="field">Nombre</label> -->
                <br>
                <input id="nombreForm" type= "text" name="first_name" placeholder= "Nombre" value="<%= locals.old && old.first_name ? old.first_name : "" %>" class="nombre-registro">
                <div class="errorEpress">
                <%if(locals.errors && errors.first_name) { %>
                       <p class="errorEpress"><%= errors.first_name.msg %></p>
                   <% } %>  
                </div>
                <br>
                <!-- <label for="last_name"class="field">Apellido</label> -->
                <br>
                <input id="nombreForm" type= "text" name="last_name"  placeholder= "Apellido" value="<%= locals.old && old.last_name ? old.last_name : ""  %>" class="nombre-registro">
                <div><%if(locals.errors && errors.last_name) { %>
                    <p class="errorEpress"><%= errors.last_name.msg %> </p>
                <% } %>
                </div>
                <br>
               
                <!-- <label for="username" class="field"> Nombre de usuario</label> -->
                <br>
                <input type="text" name="user_name"   placeholder= "Nombre de usuario" value="<%= locals.old && old.user_name ? old.user_name : ""  %>" class="nombre-registro">
                <div><%if(locals.errors && errors.user_name) { %>
                    <p class="errorEpress"><%= errors.user_name.msg %> </p>
                <% } %>
                </div>
                <br>
                 <!-- <label for="email" class="field">Email</label> -->
                 <br>
                 <input id="email" type= "text" name="email" placeholder= "Email" value="<%= locals.old && old.email ? old.email : ""%>" class="nombre-registro">
                 <div><%if(locals.errors && errors.email) { %>
                     <p class="errorEpress"><%= errors.email.msg %> </p>
                 <% } %>
                 </div>
                 <br>
                <br>
            
           
        <h4 class="cell">Elegí tu foto de perfil</h4>
        <input type= "file" name="avatar" class="imagen-perfil">
        <div><%if(locals.errors && errors.avatar) { %>
            <p class="errorEpress"><%= errors.avatar.msg %> </p>
        <% } %>
        </div>
<br>
<br>
<h4 class="cell"> Tipo de usuario</h4>
<div>
    <select name="user_category" >
        <option selected="true" disabled="disabled">seleccione una categoria</option>
        <% for (let i = 0; i < categoria.length; i++){ %> 
        <option value="<%= categoria[i].id %> ">
            <%= categoria[i].name %> 
        </option>
        <% } %> 
    </select>
    <div><%if(locals.errors && errors.user_category) { %>
        <p class="errorEpress"><%= errors.user_category.msg %> </p>
    <% } %>
    </div>
</div>
<br>
            
                <!-- <option value="user">Usuario</option>
                <option value="admin">Administrador</option>
            </select> -->
            <br>
            <br>
            <!-- <label for="password" class="field"> Contraseña</label> -->
            <br>
            <input id="contrasenia" type= "password" name="password" placeholder="Elegí tu contraseña" minlength="6" id="password" class="pass-registro" required>
            <br>
            <div><%if(locals.errors && errors.password) { %>
                <p class="errorEpress"><%= errors.password.msg %> </p>
            <% } %>
            </div>
            <br>
            <br>
            </div>
       
        <div>
            <!-- <button class="button-enviar" name= "button"><span><i class="fa fa-share-square-o" aria-hidden="true"></i> ENVIAR</span></button> 
            <button class="button-borrar" name= "button"><span><i class="fa fa-trash-o" aria-hidden="true"></i> BORRAR</span></button> -->
            <button class="button-login" type="submit"><i class="fa fa-share-square-o boton-login" aria-hidden="true"></i>Suscribirte</button>
        </div> 
            <br>
            <br>
        </form>
    </main>
    <script src="script.js"></script>
</body>
</html>